/* pages/we.wxss */
page {
  background-color: #F7F7F7;
}
.order {
  background: white;
  height: 125rpx;
  padding-left: 25rpx;
  padding-top: 15rpx;
  display: flex;
}
.order .name {
  flex: 2;
}
.order .name .one{
   font-weight: bold;
   margin-left: 25rpx;
}
.order .sao {
  padding-top: 15rpx;
  flex: 1
}
.order .sao .other {
  font-size: 30rpx;
  color: grey;
}
.swiper_container {
  height: 50rpx;
  padding-left: 20rpx;
  background: white;
  margin-bottom: 30rpx;
  }
  
  .swiper_item {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: flex;
  }
  .swiper_item .left {
    flex: 1
  }
  .swiper_item .left:first-letter {
        background: #ffcc33;
        width: 60rpx;
        height: 60rpx;
        font-size: 30rpx;
        border-radius: 5rpx;
        margin-right: 15rpx;
  }

  #content {
    display: flex;
}

#content .menu {
 flex: 1;
 background-color: #fefefe;
 text-align: center;
}

#content .scroll {
  flex: 2;
  
}

#content .scroll .item {
    display: flex;
    border-bottom: 1px solid grey;
    padding: 10px;
    position: relative;
    box-sizing: border-box;
}

#content .scroll #ickt10 .item {
   border-bottom: none;
}
#content .scroll .item .product-img {
       flex: 1;

}
#content .scroll .item .product-img .pic {
     margin-top: 20rpx;
     width: 100%;
     height: 80%;
     display: block;

}
#content .scroll .item .product-info {
      flex: 3;
      font-size: 14px;
      padding-left: 10px;
}

#content .scroll .item .product-info .product-saled {
      font-size: 12px;
      color: grey;
      line-height: 25px;
}

#content .scroll .item .product-info .product-price {
     color: #ffcc33;

}

#content .scroll .item .operate {
 right: 40rpx;
 bottom: 0rpx;
 width: 150rpx;
 height: 50rpx;
 text-align: center;
 line-height: 50rpx;
 padding-top: 28px;  
 box-sizing: border-box;
}

#content .scroll .item .operate .minus, #content .scroll .item .operate .plus {
 color: #ffcc33;
 border: 1px solid #ddd;
 border-radius: 50%;
 line-height: 45rpx;
 box-sizing: border-box;
}

#content .scroll .item .operate .number {
 width: 50rpx;
 float: left;
 box-sizing: border-box;
}
#content .scroll .item .operate .minus {
 float: left;
 width: 50rpx;
 height: 50rpx;
 box-sizing: border-box;
}
#content .scroll .item .operate .plus {
 float: right;
 width: 50rpx;
 height: 50rpx;
}
#footer {
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  text-align: center;
}
#footer view {
     flex: 3;
     background-color: #F7F7F7;
     height: 100rpx;
     line-height: 100rpx;
     font-weight:  bold;

}
#footer .ok  {
     flex: 2;
     background-color: #3ECCA6;
     color: white;
}
