page {
  background-color: #F7F7F7;
}
.part {
   padding: 20rpx;
   background: white;
   display: flex;
   border-bottom: 1px solid #eee;
}
.part .address {
   margin-left: 15rpx;
   line-height: 60rpx;
   flex: 1;
   font-size: 30rpx;
 }
 .part .address .bold {
    font-weight: bold;
    font-size: 32rpx;
 }
 .time {
    padding: 20rpx;
    padding-bottom: 0rpx;
    background: white;
    height: 120rpx;
    line-height: 120rpx;
    font-size: 35rpx;
 }
 .time .right {
     font-weight: bold;
     margin-right: 15rpx;
     margin-left: 25rpx;
 }
 .time .item {
    color: #ffcc33;
    font-weight: bold;
    font-size: 30rpx;
 }
 .detail {
    margin-top: 25rpx;
    background: white;
    padding: 30rpx;
    padding-bottom: 0rpx;
 }
 .detail .detail_order {
    font-weight: 900;
 }
 .detail .part2 {
    margin-top: 25rpx;
    display: flex;
    padding-bottom: 15rpx;
    border-bottom: 1px solid #eee;
 }
 .detail .part2 .pcs .image {
    width: 120rpx;
    height: 120rpx;
    margin-right: 25rpx;
 }
 .detail .part2 .food-name {
     flex: 1;
 }
 .detail .part2 .food-name .foods {
     font-weight: bold;
 }
 .detail .part2 .food-name .test {
    font-size: 25rpx;
    color: grey;
    margin-bottom: 15rpx;
 }
 .detail .part2 .food-name .price {
     margin-top: 30rpx;
     font-weight: 800;
 }
 .detail .part2 .quantity {
     margin-top: 25rpx;
     font-weight: 600;
 }
 .delivery {
    padding: 30rpx;
    background-color: white;
    border-bottom: 1px solid #eee;
 }
 .delivery .totol {
     height: 60rpx;
     line-height: 60rpx;
     display: flex;
     margin-bottom: 15rpx;
 }
 .delivery .bold {
    font-weight: 800;
    flex: 1;
 }
 .delivery .totol .new {
    font-weight: bold;
 }
 .delivery .totol .yellow:first-letter {
     background: #ffcc33;
     padding: 8rpx;
 }
 .delivery .totol .color {
     color: #ffcc33;
 }
 .discount {
     margin-bottom: 50rpx;
 }
 /* 底部的导航 */
 .footer {
     border-top: 1px solid #eee;
     margin-top: 15rpx;
     position: fixed;
     bottom: 0;
     display: flex;
     background: white;
     width: 100%;
     height: 100rpx;
 }
 .footer .cancel {
     padding-top: 10rpx;
     padding-left: 30rpx;
     line-height: 80rpx;
 }
 .footer .delate {
     position: relative;
     left: 120rpx;
     margin-top: 15rpx;
     height: 70rpx;
     background: white;
     margin-right: 10rpx;
     font-size: 30rpx;
 }
 .footer .order {
   margin-top: 15rpx;
   height: 70rpx;
   background: #ffcc33;
   margin-right: 15rpx;
   color: white;
   font-size: 30rpx;
 }