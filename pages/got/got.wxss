page {
  background-color: #F7F7F7;
  padding: 20px;
}
.price {
  width: 90%;
  height: 150rpx;
  padding: 10rpx;
  padding-left: 10rpx;
  margin-top: 20rpx;
  background-color: white;
  display: flex;
}
.price .use {
  border-right: 1px dotted grey;
  width: 30%;
}
.price .use .bold {
  font-weight: bold;
  font-size: 40rpx;
  line-height: 70rpx;
}
.price .use .it {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: grey;
}
.price .tongyong {
  padding: 15rpx;
}
.price .tongyong .gotit {
  display: flex;
}
.price .tongyong .gotit .bold {
  font-weight: bold;
  font-size: 30rpx;
  flex: 1;
}
.price .tongyong .gotit .ling {
  background: #FECB2E;
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 25rpx;
  font-size: 25rpx;
}
.price .tongyong .lasttime {
  display: flex;
  margin-top: 25rpx;
}